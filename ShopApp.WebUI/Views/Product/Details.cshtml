@model Product
@{
  
  
  Layout ="_layout";
}
@section Category
{
  @await Component.InvokeAsync("Category")
}

<div class="card"">
  <div class="card-body">
  <div class="row no-gutters">
    <div class="col-md-3">
     <img src="~/img/@Model.ImageUrl" alt="" class="card-img">
    </div>
    <div class="col-md-9">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.ImageUrl</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>

